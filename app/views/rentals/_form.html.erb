<%= form_for(@rental) do |f| %>
  <% if @rental.errors.any? %>
    <h2> <%= pluralize(@rental.errors.count,"error") %> prevented book from being saved: </h2>
    <p> There were problems with the following fields: </p>
    <ul>
    <% @rental.errors.full_messages.each do |msg| %>
      <li> <%= "#{msg}" %> </li>
    <% end %>
    </ul>
   <% end %>

  <div class="field">
    <%= f.label :book_id, "Book" %><br />
    <%= f.collection_select :book_id, Book.all, :id, :name, :prompt=>true %>
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :user_id, "User" %><br />
    <%= f.collection_select :user_id,User.all, :id, :email %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
